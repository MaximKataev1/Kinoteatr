<Window x:Class="Kino_Kataev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kino_Kataev"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <DockPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Top" Height="40">
                <Button Content="Кинотеатры" Margin="5" HorizontalAlignment="Right" Background="DarkGoldenrod" Width="120" FontWeight="Bold" Foreground="White" Click="gotoKinoteatr"/>
                <Button Content="Афиша" Margin="5" HorizontalAlignment="Right" Background="DarkSlateBlue" Width="120" FontWeight="Bold" Foreground="White" Click="gotoAfishas"/>
            </StackPanel>
            <Frame x:Name="frame" NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>
